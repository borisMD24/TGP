<%= form_tag url_for(action: 'create'), method: "post" do %>

    <%= label_tag 'Title' %>
    <%= text_field_tag 'title', @potin.title %>
    <br /> <br />
  
    <%= label_tag 'content' %>
    <%= text_area_tag 'content', @potin.content %>
    <br /> <br />
  
    <%= label_tag 'user_id' %>
    <%= text_field_tag 'user_id', @potin.user_id %>
    <br /> <br />
  
    <%= submit_tag 'Create post' %>
  
<% end %>